pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building node'
                // Construir la imagen de Docker utilizando el Dockerfile y etiquetarla
                script {
                    docker.image('node:14-slim').build('-t my-node-app .')
                }
            }
        }
        stage('Test'){
            steps {
                echo 'Testing node'
                // Ejecutar pruebas dentro del contenedor
                script {
                    docker.image('my-node-app').inside {
                        sh 'npm test'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy node'
                // Desplegar la aplicación utilizando la imagen de Docker
                // Esto puede variar según tu entorno de despliegue
                script {
                    docker.image('my-node-app').withRun('-p 3000:3000') {
                        sh 'echo "Application is running"'
                        // Puedes agregar aquí comandos para iniciar tu aplicación Node.js
                    }
                }
            }
        }
    }
}
