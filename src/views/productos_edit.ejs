<%- include('partials/_header') %>

<div class="container mt-5" >
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/productos/update/<%= data.id %>" method="post" enctype="multipart/form-data">
                        <div class="from-group">
                            <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control">
                        </div>
                        <div class="from-group">
                            <input type="text" name="descripcion" value="<%= data.descripcion %>" class="form-control">
                        </div>
                        <div class="from-group">
                            <input type="text" name="precio" value="<%= data.precio %>" class="form-control">
                        </div>
                        <div class="from-group">
                            <input type="text" name="talla" value="<%= data.precio %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Colores disponibles:</label>
                            <select name="color[]" multiple class="form-control">
                               <option value="rojo">Rojo</option>
                               <option value="azul">Azul</option>
                               <option value="verde">Verde</option>
                               <option value="amarillo">Amarillo</option>
                            </select>
                         </div>
                        <div class="from-group">
                            <input type="text" value="<%= data.color %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="file" name="img_url" value="<%= data.img_url %>" class="form-control">
                        </div>
                        <div class="from-group">
                            <select name="categoria_id" class="form-control">
                                <% for(let i = 0; i < categorias.length; i++) { %>
                                    <option value="<%= categorias[i].id %>"><%= categorias[i].nombre %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <img src="<%= data.img_url %>" alt="Mi imagen">
                        </div>
                        <button type="submit" class="btn btn-primary">
                           Edit Productos 
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>